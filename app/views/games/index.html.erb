<h1>Games</h1>

<% Game.all.each do |game| %>
  <div class="row">
    <div class="col-6">
    <%= game.id %> | <%= game.display_name %>
    <%= link_to 'Show', game_path(game), class: 'btn btn-primary' %>
    </div>
    <%= form_with model: GameReview.new, html: { class: "col-2" } do |f| %>
        <%= f.hidden_field :game_id, value: game.id %>
      <%= f.submit class: "btn btn-success" %>
    <% end %>
    <div class="col-2">
    <%= link_to 'Destroy', game, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>

<%= link_to 'New Game', new_game_path, class: 'btn btn-primary' %>
